<h1> Update Quantity Form </h1>


<% if @inventory.errors %>
    <% @inventory.errors.full_messages.each do |message| %>
        <div><%= message %></div>
    <%end%>
<%end%>

<%= form_for @inventory do |f| %>
    <%= f.label :store, "Select store:" %>
    <%= f.collection_select :store_id, Store.all, :id, :name, include_blank: 'Store' %>
    <br><br>
    <%= f.label :product, "Item to Restock:" %>
    <%= f.collection_select :product_id, Product.all, :id, :name, include_blank: 'Select Item'%>
    <br><br>
    <%= f.label :quantity, "Amount" %>
    <%= f.number_field :quantity, in: 1.0..50.0, step: 1 %>
    <br><br>
    <%= f.submit %>
<% end %>