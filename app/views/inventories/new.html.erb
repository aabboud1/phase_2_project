<h1> Order new Inventory for <%= @store.name %></h1>


<% if @inventory.errors %>
    <% @inventory.errors.full_messages.each do |message| %>
        <div><%= message %></div>
    <%end%>
<%end%>

<%= form_for @inventory do |f| %>
    <%= f.hidden_field :store_id %>
    <%= f.label :product, "New Item to add" %>
    <%= f.collection_select :product_id, Product.all, :id, :name, include_blank: 'Select Item'%>
    <br><br>
    <%= f.label :quantity, "Amount" %>
    <%= f.number_field :quantity, in: 1.0..50.0, step: 1 %>
    <br><br>
    <%= f.submit %>
<% end %>