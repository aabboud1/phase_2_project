<% if @customer.errors %>
    <% @customer.errors.full_messages.each do |message| %>
    <div><%= message %></div>
    <%end%>
<%end%>

<%= form_for @customer do |f| %>
<%= f.label :name %>
<%= f.text_field :name %>
<%= f.label :birth_year %>
<% #adding functionallity to be able to choose from selct years %>
<%= f.collection_select (:birth_year, [1950..2000])%>
<% end %>
