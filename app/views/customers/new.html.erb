<div style="margin-left: 10px">
<% if @customer.errors %>
    <% @customer.errors.full_messages.each do |message| %>
    <div><b><%= message %></b></div>
    <%end%>
<%end%>

<h1 class="fireText">New User Form</h1>

<%= form_for @customer do |f| %>
<%= f.label :name %>
<%= f.text_field :name %>
<br>
<%= f.label :birth_year %>
<%= f.select(:birth_year, 1950..2000)%>
<br>
<%= f.label "Enter password" %>
<%= f.password_field :password %>
<br>
<%= f.label "DEBUG PURPOSES: Balance in USD" %>
<%= f.number_field :balance, step: 0.01 %>
<br>
<%= f.label "Enter Manager Code (optional)" %>
<%= f.text_field :manager_of_store_id %>
<br><br>
<%= f.submit %>
<% end %>

</div>