<% if @customer.errors %>
    <% @customer.errors.full_messages.each do |message| %>
    <div><%= message %></div>
    <%end%>
<%end%>

<%= form_for @customer do |f| %>
<%= f.label :name %>
<%= f.text_field :name %>
<br>
<%= f.label :birth_year %>
<%= f.select(:birth_year, 1950..2000)%>
<br>
<%= f.submit %>
<% end %>
